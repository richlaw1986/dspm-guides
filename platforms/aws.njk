<div class="container">
    
    <!-- Platform Hero Section -->
    <div class="platform-hero">
        <div class="platform-logo">AWS</div>
        <h1>Amazon Web Services Data Security</h1>
        <p>Comprehensive guides for securing your AWS environment, detecting sensitive data, and maintaining compliance across your cloud infrastructure and data services.</p>
    </div>
	
    <!-- Available Guides -->
    <div class="content-section">
        <h2 class="section-title">AWS Security Guides</h2>
        
        {# Debug: Show all available guides and their platforms #}
        <!-- Debug info (remove in production):
        {% for guide in collections.guides %}
            Platform: {{ guide.data.platform }} | Title: {{ guide.data.title }}
        {% endfor %}
        -->
        
        {# Filter guides for AWS platform #}
        {% set awsGuides = [] %}
        {% for guide in collections.guides %}
            {% if guide.data.platform == "aws" %}
                {% set awsGuides = (awsGuides.push(guide), awsGuides) %}
            {% endif %}
        {% endfor %}
        {% set guideCount = awsGuides | length %}
        
        {# Fallback: if no aws guides found, show all guides #}
        {% if guideCount == 0 %}
            {% set awsGuides = collections.guides %}
            {% set guideCount = awsGuides | length %}
        {% endif %}
        
        <p class="guides-count">{{ guideCount }} guide{{ "s" if guideCount != 1 }} available for AWS</p>
        
        <div class="guide-filters">
            <button class="filter-button active">All Guides</button>
            <button class="filter-button">Detection</button>
            <button class="filter-button">Prevention</button>
            <button class="filter-button">Compliance</button>
        </div>
        
        <div class="component-grid">
            {# Loop through AWS guides #}
            {% for guide in awsGuides %}
                {% if guide.data.status != "coming-soon" %}
